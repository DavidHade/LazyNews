@model WebUI.Models.HeadlineViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron background-top">
    <div class="text-center">
        <h1 style="color:white;">Lazy News</h1>
        <h2 style="color:white">The news outlet for <strike>lazy</strike> efficient people</h2>
        <hr />
        <h3 style="color:white">
            We search the internet for news, so you don't have to
        </h3>
        <div class="progress" style="margin:0">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                60% Complete
                <span class="sr-only">45% Complete</span>
            </div>
        </div>
    </div>
</div>

<div class="filter-column col-md-2">
    <h4>Filter by News Source</h4>
    <div class="list-group">
        @Html.ActionLink("All", "ShowData", null, new { @class = Request["newsSource"] == null ? "list-group-item active" : "list-group-item" })
        @Html.ActionLink("The Guardian", "ShowData", new { newsSource = "theguardian" }, new { @class = Request["newsSource"] == "theguardian" ? "list-group-item active" : "list-group-item" })
        @Html.ActionLink("Fox News", "ShowData", new { newsSource = "foxnews" }, new { @class = Request["newsSource"] == "foxnews" ? "list-group-item active" : "list-group-item" })
        @Html.ActionLink("Bbc", "ShowData", new { newsSource = "bbc" }, new { @class = Request["newsSource"] == "bbc" ? "list-group-item active" : "list-group-item" })
        @Html.ActionLink("New York Times", "ShowData", new { newsSource = "nytimes" }, new { @class = Request["newsSource"] == "nytimes" ? "list-group-item active" : "list-group-item" })
    </div>
</div>

<div class="row col-md-10">
    @Html.Partial("_ProjectData", (ViewBag.Projects as WebUI.Models.HeadlineViewModel))

</div>

<div id='Modal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='ModalContent'></div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/lazyLoading.js"></script>
    <script src="~/Scripts/modal.js"></script>
